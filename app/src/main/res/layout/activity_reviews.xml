<?xml version="1.0" encoding="utf-8"?>
<!-- Reviews own ScrollView -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.learn.heddy.awesomemovies.ReviewsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        <LinearLayout
            android:id="@+id/linearLayoutReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reviews_title"
                android:text="@string/reviews"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:layout_margin="2dp"
                android:background="@color/movieMediumImages"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"/>

            <ListView
                android:id = "@+id/listview_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Reviews List"
                android:divider="@color/movieMediumImages"
                android:dividerHeight="1dp" />

        </LinearLayout>


</ScrollView>
